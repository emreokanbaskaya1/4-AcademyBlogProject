@model List<ResultBlogDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<!-- Start retroy layout blog posts -->
<section class="section bg-light">
	<div class="container">
		<div class="row align-items-stretch retro-layout">
			@if (Model != null && Model.Count >= 5)
			{
				<!-- Left Column - 2 Blogs -->
				<div class="col-md-4">
					<a href="/Blog/BlogDetails/@Model[0].Id" class="h-entry mb-30 v-height gradient">
						<div class="featured-img" style="background-image: url('@Model[0].CoverImage');"></div>
						<div class="text">
							<span class="date">@Model[0].CreatedDate.ToString("MMM. dd, yyyy")</span>
							<h2>@Model[0].Title</h2>
						</div>
					</a>
					<a href="/Blog/BlogDetails/@Model[1].Id" class="h-entry v-height gradient">
						<div class="featured-img" style="background-image: url('@Model[1].CoverImage');"></div>
						<div class="text">
							<span class="date">@Model[1].CreatedDate.ToString("MMM. dd, yyyy")</span>
							<h2>@Model[1].Title</h2>
						</div>
					</a>
				</div>

				<!-- Middle Column - 1 Large Blog -->
				<div class="col-md-4">
					<a href="/Blog/BlogDetails/@Model[2].Id" class="h-entry img-5 h-100 gradient">
						<div class="featured-img" style="background-image: url('@Model[2].CoverImage');"></div>
						<div class="text">
							<span class="date">@Model[2].CreatedDate.ToString("MMM. dd, yyyy")</span>
							<h2>@Model[2].Title</h2>
						</div>
					</a>
				</div>

				<!-- Right Column - 2 Blogs -->
				<div class="col-md-4">
					<a href="/Blog/BlogDetails/@Model[3].Id" class="h-entry mb-30 v-height gradient">
						<div class="featured-img" style="background-image: url('@Model[3].CoverImage');"></div>
						<div class="text">
							<span class="date">@Model[3].CreatedDate.ToString("MMM. dd, yyyy")</span>
							<h2>@Model[3].Title</h2>
						</div>
					</a>
					<a href="/Blog/BlogDetails/@Model[4].Id" class="h-entry v-height gradient">
						<div class="featured-img" style="background-image: url('@Model[4].CoverImage');"></div>
						<div class="text">
							<span class="date">@Model[4].CreatedDate.ToString("MMM. dd, yyyy")</span>
							<h2>@Model[4].Title</h2>
						</div>
					</a>
				</div>
			}
			else
			{
				<!-- Fallback if less than 5 blogs exist -->
				<div class="col-12 text-center">
					<p class="text-muted">No blogs available yet. Please add some blogs!</p>
				</div>
			}
		</div>
	</div>
</section>
<!-- End retroy layout blog posts -->
@await Component.InvokeAsync("_DefaultBlogsComponent");
