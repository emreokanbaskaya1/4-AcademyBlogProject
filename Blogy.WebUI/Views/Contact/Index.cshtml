@using Blogy.Business.DTOs.ContactMessageDtos
@model CreateContactMessageDto
@{
    ViewData["Title"] = "Contact Us";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="hero overlay inner-page bg-primary py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center pt-5">
            <div class="col-lg-6">
                <h1 class="heading text-white mb-3" data-aos="fade-up">Contact Us</h1>
            </div>
        </div>
    </div>
</div>

<div class="section">
    <div class="container">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <div class="row">
            <div class="col-lg-4 mb-5 mb-lg-0" data-aos="fade-up" data-aos-delay="100">
                <div class="contact-info">
                    @if (ViewBag.ContactInfo != null)
                    {
                        <div class="address mt-2">
                            <i class="icon-room"></i>
                            <h4 class="mb-2">Location:</h4>
                            <p>@ViewBag.ContactInfo.Location</p>
                        </div>

                        <div class="open-hours mt-4">
                            <i class="icon-clock-o"></i>
                            <h4 class="mb-2">Open Hours:</h4>
                            <p>@Html.Raw(ViewBag.ContactInfo.OpenHours.Replace("\n", "<br>"))</p>
                        </div>

                        <div class="email mt-4">
                            <i class="icon-envelope"></i>
                            <h4 class="mb-2">Email:</h4>
                            <p>@ViewBag.ContactInfo.Email</p>
                        </div>

                        <div class="phone mt-4">
                            <i class="icon-phone"></i>
                            <h4 class="mb-2">Call:</h4>
                            <p>@ViewBag.ContactInfo.Phone</p>
                        </div>
                    }
                    else
                    {
                        <div class="address mt-2">
                            <i class="icon-room"></i>
                            <h4 class="mb-2">Location:</h4>
                            <p>43 Raymouth Rd. Baltemoer,<br> London 3910</p>
                        </div>

                        <div class="open-hours mt-4">
                            <i class="icon-clock-o"></i>
                            <h4 class="mb-2">Open Hours:</h4>
                            <p>
                                Sunday-Friday:<br>
                                11:00 AM - 2300 PM
                            </p>
                        </div>

                        <div class="email mt-4">
                            <i class="icon-envelope"></i>
                            <h4 class="mb-2">Email:</h4>
                            <p>info@Untree.co</p>
                        </div>

                        <div class="phone mt-4">
                            <i class="icon-phone"></i>
                            <h4 class="mb-2">Call:</h4>
                            <p>+1 1234 55488 55</p>
                        </div>
                    }
                </div>
            </div>

            <div class="col-lg-8" data-aos="fade-up" data-aos-delay="200">
                <form asp-action="SendMessage" method="post">
                    <div class="row">
                        <div class="col-6 mb-3">
                            <input asp-for="Name" type="text" class="form-control" placeholder="Your Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-6 mb-3">
                            <input asp-for="Email" type="email" class="form-control" placeholder="Your Email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <input asp-for="Subject" type="text" class="form-control" placeholder="Subject">
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <textarea asp-for="Message" cols="30" rows="7" class="form-control" placeholder="Message"></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
