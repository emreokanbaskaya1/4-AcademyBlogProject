@{
    ViewData["Title"] = "About Us";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="hero overlay inner-page bg-primary py-5">
    <div class="container">
        <div class="row align-items-center justify-content-center text-center pt-5">
            <div class="col-lg-6">
                <h1 class="heading text-white mb-3" data-aos="fade-up">About Us</h1>
            </div>
        </div>
    </div>
</div>

<!-- About Sections - Dinamik -->
@if (ViewBag.Abouts != null && ViewBag.Abouts.Count > 0)
{
    <div class="section sec-halfs py-0">
        <div class="container">
            @{
                int counter = 0;
            }
            @foreach (var about in ViewBag.Abouts)
            {
                counter++;
                var isEven = counter % 2 == 0;

                <div class="half-content d-lg-flex align-items-stretch mb-5">
                    @if (isEven)
                    {
                        <div class="img order-md-2" style="background-image: url('@about.ImageUrl'); margin: 20px;" data-aos="fade-in"></div>
                    }
                    else
                    {
                        <div class="img" style="background-image: url('@about.ImageUrl'); margin: 20px;" data-aos="fade-in" data-aos-delay="100"></div>
                    }
                    <div class="text" style="padding: 40px;">
                        <h2 class="heading text-primary mb-3">@about.Title</h2>
                        <p class="mb-4">@about.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>
}

<!-- Features Section -->
<div class="section sec-features">
    <div class="container">
        <hr style="border: 0; height: 1px; background: linear-gradient(to right, transparent, #ddd, transparent); margin: 3rem 0;">
    </div>
</div>

<!-- Team Section - Dinamik -->
@if (ViewBag.TeamMembers != null && ViewBag.TeamMembers.Count > 0)
{
    <div class="section">
        <div class="container">
            <div class="row mb-5">
                <div class="col-lg-5 mx-auto text-center" data-aos="fade-up">
                    <h2 class="heading text-primary">Our Team</h2>
                    <p>Meet the talented team behind our blogging platform.</p>
                </div>
            </div>

            <div class="row">
                @{
                    int delayCounter = 0;
                }
                @foreach (var member in ViewBag.TeamMembers)
                {
                    var delay = delayCounter % 3 == 0 ? 0 : delayCounter % 3 == 1 ? 100 : 200;
                    <div class="col-lg-4 mb-4 text-center" data-aos="fade-up" data-aos-delay="@delay">
                        <img src="@member.ImageUrl" alt="@member.FullName" class="img-fluid w-50 rounded-circle mb-3">
                        <h5 class="text-black">@member.FullName</h5>
                        @if (!string.IsNullOrEmpty(member.Title))
                        {
                            <p class="text-muted mb-2"><strong>@member.Title</strong></p>
                        }
                        <p>@member.Description</p>
                    </div>
                    delayCounter++;
                }
            </div>
        </div>
    </div>
}


