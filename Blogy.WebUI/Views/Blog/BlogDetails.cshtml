@model ResultBlogDto
@{
    ViewData["Title"] = "BlogDetails";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="site-cover site-cover-sm same-height overlay single-page" style="background-image: url('@Model.CoverImage');">
    <div class="container">
        <div class="row same-height justify-content-center">
            <div class="col-md-6">
                <div class="post-entry text-center">
                    <h1 class="mb-4">@Model.Title</h1>
                    <div class="post-meta align-items-center text-center">
                        <figure class="author-figure mb-0 me-3 d-inline-block"><img src="@Model.Writer.ImageUrl" alt="Image" class="img-fluid"></figure>
                        <span class="d-inline-block mt-1">By @Model.Writer.FullName</span>
                        <span>&nbsp;-&nbsp; @Model.CreatedDate</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<section class="section">
    <div class="container">

        <div class="row blog-entries element-animate">

            <div class="col-md-12 col-lg-8 main-content">

                <div class="post-content-body">

                    <div class="row my-4">
                        <div class="col-md-12 mb-4">
                            <img src="@Model.CoverImage" alt="@Model.Title" class="img-fluid rounded">
                        </div>
                        @if (!string.IsNullOrEmpty(Model.BlogImage1))
                        {
                            <div class="col-md-6 mb-4">
                                <img src="@Model.BlogImage1" alt="@Model.Title" class="img-fluid rounded">
                            </div>
                        }
                        @if (!string.IsNullOrEmpty(Model.BlogImage2))
                        {
                            <div class="col-md-6 mb-4">
                                <img src="@Model.BlogImage2" alt="@Model.Title" class="img-fluid rounded">
                            </div>
                        }
                    </div>
                    <p>@Model.Description</p>

                </div>


                <div class="pt-5">
                    <p>
                        Category:  <a href="/Blog/GetBlogsByCategory/@Model.CategoryId">@Model.Category.CategoryName</a>
                        @if (Model.BlogTags != null && Model.BlogTags.Any())
                        {
                            <span> | Tags: </span>
                            @foreach (var blogTag in Model.BlogTags)
                            {
                                <a href="#" class="badge bg-secondary text-white me-1">@blogTag.Tag.Name</a>
                            }
                        }
                    </p>
                </div>


                <div class="pt-5 comment-wrap">
                    <h3 class="mb-5 heading">@Model.Comments.Count Comments</h3>
                    <ul class="comment-list">
                        @foreach(var comment in Model.Comments)
                        {
                            <li class="comment">
                                <div class="vcard">
                                    <img src="@comment.User.ImageUrl" alt="@comment.User.FullName">
                                </div>
                                <div class="comment-body">
                                    <h3>@comment.User.FullName</h3>
                                    <div class="meta">@comment.CreatedDate.ToShortDateString()</div>
                                    <p>@comment.Content</p>
                                </div>
                            </li>
                        }
                    </ul>
                    <!-- END comment-list -->

                    <div class="comment-form-wrap pt-5">
                        <h3 class="mb-5">Leave a comment</h3>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <form asp-controller="Blog" asp-action="AddComment" method="post" class="p-5 bg-light">
                                <input type="hidden" name="BlogId" value="@Model.Id" />
                                <div class="form-group">
                                    <label for="Content">Your Comment *</label>
                                    <textarea name="Content" id="Content" cols="30" rows="10" class="form-control" required></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Post Comment</button>
                            </form>
                        }
                        else
                        {
                            <div class="alert alert-info">
                                <p>You need to login to leave a comment.</p>
                                <a href="/Login/Index" class="btn btn-primary">Login</a>
                            </div>
                        }
                    </div>
                </div>

            </div>

            <!-- END main-content -->

            <div class="col-md-12 col-lg-4 sidebar">
                
                <!-- Search Form -->
                <div class="sidebar-box search-form-wrap mb-4">
                    <form action="#" class="sidebar-search-form">
                        <span class="bi-search"></span>
                        <input type="text" class="form-control" id="s" placeholder="Type a keyword and hit enter">
                    </form>
                </div>
                <!-- END sidebar-box -->

                <!-- Popular Posts - En Son Eklenen 3 Blog -->
                <div class="sidebar-box">
                    <h3 class="heading">Popular Posts</h3>
                    <div class="post-entry-sidebar">
                        <ul>
                            @if (ViewBag.LatestBlogs != null)
                            {
                                @foreach (var blog in ViewBag.LatestBlogs)
                                {
                                    <li>
                                        <a href="/Blog/BlogDetails/@blog.Id">
                                            <img src="@blog.CoverImage" alt="@blog.Title" class="me-4 rounded">
                                            <div class="text">
                                                <h4>@(blog.Title.Length > 50 ? blog.Title.Substring(0, 50) + "..." : blog.Title)</h4>
                                                <div class="post-meta">
                                                    <span class="mr-2">@blog.CreatedDate.ToShortDateString()</span>
                                                </div>
                                            </div>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </div>
                </div>
                <!-- END sidebar-box -->

                <!-- Categories - Kategori Listesi ve Blog Sayıları -->
                <div class="sidebar-box">
                    <h3 class="heading">Categories</h3>
                    <ul class="categories">
                        @if (ViewBag.Categories != null)
                        {
                            @foreach (var category in ViewBag.Categories)
                            {
                                <li>
                                    <a href="/Blog/GetBlogsByCategory/@category.Id">
                                        @category.CategoryName <span>(@category.BlogCount)</span>
                                    </a>
                                </li>
                            }
                        }
                    </ul>
                </div>
                <!-- END sidebar-box -->

                <!-- Tags - Bu Blog'a Ait Tag'ler -->
                @if (Model.BlogTags != null && Model.BlogTags.Any())
                {
                    <div class="sidebar-box">
                        <h3 class="heading">Tags</h3>
                        <ul class="tags">
                            @foreach (var blogTag in Model.BlogTags)
                            {
                                <li><a href="#">@blogTag.Tag.Name</a></li>
                            }
                        </ul>
                    </div>
                }
                <!-- END sidebar-box -->

            </div>
            <!-- END sidebar -->

        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}