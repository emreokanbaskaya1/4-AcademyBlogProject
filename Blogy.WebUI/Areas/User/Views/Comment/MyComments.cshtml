@model List<ResultCommentDto>
@{
    ViewData["Title"] = "My Comments";
    Layout = "~/Views/Shared/User_Layout.cshtml";
}

<h1>My Comments</h1>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">My Comments</h1>
    <a href="/Blog/Index" class="d-none d-sm-inline-block btn btn-sm btn-info shadow-sm">
        <i class="fas fa-search fa-sm text-white-50"></i> Browse Blogs
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="card shadow mb-4">
        <div class="card-body text-center py-5">
            <i class="fas fa-comments fa-3x text-gray-300 mb-3"></i>
            <p class="text-gray-500 mb-3">You haven't made any comments yet.</p>
            <a href="/Blog/Index" class="btn btn-info">Browse Blogs to Comment</a>
        </div>
    </div>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-info">My Comments (@Model.Count total)</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Blog</th>
                            <th>Comment</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                        }
                        @foreach (var item in Model.OrderByDescending(x => x.CreatedDate))
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <a href="/Blog/BlogDetails/@item.BlogId" class="text-decoration-none" target="_blank">
                                        <strong>@item.Blog.Title</strong>
                                        <i class="fas fa-external-link-alt fa-xs ml-1"></i>
                                    </a>
                                    <br />
                                    <small class="text-muted">
                                        <i class="fas fa-folder"></i> @item.Blog.Category.CategoryName
                                    </small>
                                </td>
                                <td>
                                    @if (item.Content.Length > 100)
                                    {
                                        <span>@item.Content.Substring(0, 100)...</span>
                                        <a href="#" data-toggle="modal" data-target="#commentModal@item.Id" class="text-info">
                                            Read more
                                        </a>
                                    }
                                    else
                                    {
                                        <span>@item.Content</span>
                                    }
                                </td>
                                <td>
                                    <small>
                                        <i class="far fa-calendar"></i> @item.CreatedDate.ToShortDateString()
                                        <br />
                                        <i class="far fa-clock"></i> @item.CreatedDate.ToShortTimeString()
                                    </small>
                                </td>
                                <td>
                                    <a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-sm btn-info" title="View Blog" target="_blank">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/User/Comment/DeleteComment/@item.Id" 
                                       onclick="return confirm('Are you sure you want to delete this comment?')" 
                                       class="btn btn-sm btn-danger" 
                                       title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>

                            <!-- Modal for full comment -->
                            <div class="modal fade" id="commentModal@item.Id" tabindex="-1" role="dialog">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title">Full Comment</h5>
                                            <button type="button" class="close" data-dismiss="modal">
                                                <span>&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <p><strong>Blog:</strong> @item.Blog.Title</p>
                                            <p><strong>Date:</strong> @item.CreatedDate</p>
                                            <hr />
                                            <p>@item.Content</p>
                                        </div>
                                        <div class="modal-footer">
                                            <a href="/Blog/BlogDetails/@item.BlogId" class="btn btn-info btn-sm" target="_blank">
                                                View Blog
                                            </a>
                                            <button type="button" class="btn btn-secondary btn-sm" data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Statistics Card -->
    <div class="row">
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">Total Comments</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-comments fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">Blogs Commented</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Select(x => x.BlogId).Distinct().Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-newspaper fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">Latest Comment</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                <small>@Model.Max(x => x.CreatedDate).ToShortDateString()</small>
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

