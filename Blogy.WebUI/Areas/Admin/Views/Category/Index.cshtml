@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Categories</h3>
@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Actions</th>
    </tr>


    @foreach(var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.CategoryName</td>
            <td>
                <a href="/Admin/Category/DeleteCategory/@item.Id" class="btn btn-danger">Delete</a>
                <a href="/Admin/Category/UpdateCategory/@item.Id" class="btn btn-info">Update</a>
            </td>
        </tr>
    }
</table>

<a href="/Admin/Category/CreateCategory" class="btn btn-primary">Create New Category</a>

