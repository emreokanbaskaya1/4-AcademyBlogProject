@model List<ResultBlogDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Blogs</h1>

@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Blog Title</th>
        <th>Description</th>
        <th>Category</th>
        <th>Actions</th>
    </tr>


    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td><img src="@item.CoverImage" style="height: 75px; width: 75px"/>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.Category.CategoryName</td>
            <td>
                <a href="/Admin/Blog/DeleteBlog/@item.Id" onclick="return confirm('Are you sure you want to permanently delete this item?')" class="btn btn-danger">Delete</a>
                <a href="/Admin/Blog/UpdateBlog/@item.Id" class="btn btn-info">Update</a>
            </td>
        </tr>
    }
</table>

<a href="/Admin/Blog/CreateBlog" class="btn btn-primary">Create New Blog</a>


