@model List<ResultSocialDto>
@{
    ViewData["Title"] = "Social Media Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Social Media Links</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Platform Name</th>
            <th>URL</th>
            <th>Icon</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Name</td>
                <td>@item.Url</td>
                <td><span class="@item.Icon"></span> @item.Icon</td>
                <td>
                    <a href="/Admin/Social/DeleteSocial/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this social media link?')">Delete</a>
                    <a href="/Admin/Social/UpdateSocial/@item.Id" class="btn btn-info btn-sm">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/Social/CreateSocial" class="btn btn-primary">Add New Social Media Link</a>
