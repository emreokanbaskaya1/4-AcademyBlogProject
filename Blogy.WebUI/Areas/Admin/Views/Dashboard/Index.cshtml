@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var stats = ViewBag.Stats as Blogy.Business.DTOs.DashboardDtos.DashboardStatsDto;
}

<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">
        <i class="fas fa-tachometer-alt"></i> Dashboard
    </h1>
    <span class="text-muted">Welcome to Blogy Admin Panel</span>
</div>

<!-- Ýstatistik Kartlarý (Widgets) -->
<div class="row">

    <!-- Toplam Blog Sayýsý -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Total Blogs
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalBlogs</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-blog fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toplam Kullanýcý Sayýsý -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Total Users
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalUsers</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-users fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toplam Yorum Sayýsý -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Total Comments
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalComments</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-comments fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Toplam Mesajlar -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Total Messages
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalMessages</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-envelope fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Ýkinci Satýr - Kategori ve Aktif Yazarlar -->
<div class="row">

    <!-- Toplam Kategori -->
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-secondary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                            Total Categories
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalCategories</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-folder fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Aktif Yazarlar (Son 30 Gün) -->
    <div class="col-xl-6 col-md-6 mb-4">
        <div class="card border-left-danger shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                            Active Writers (30 Days)
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@stats.TotalActiveWriters</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-pen fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Chart'lar -->
<div class="row">

    <!-- Pie Chart - Kategori Daðýlýmý -->
    <div class="col-xl-6 col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-chart-pie"></i> Blog Distribution by Category
                </h6>
            </div>
            <div class="card-body">
                <div class="chart-pie pt-4 pb-2">
                    <canvas id="categoryPieChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Line Chart - Son 7 Günlük Aktivite -->
    <div class="col-xl-6 col-lg-6">
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-chart-line"></i> Activity Last 7 Days
                </h6>
            </div>
            <div class="card-body">
                <div class="chart-area">
                    <canvas id="activityLineChart"></canvas>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    
    <script>
        // Backend'den gelen veriyi parse et
        const categoryData = @Html.Raw(ViewBag.CategoryDistribution);
        const activityData = @Html.Raw(ViewBag.DailyActivity);

        // 1. PIE CHART - Kategori Daðýlýmý
        const pieCtx = document.getElementById('categoryPieChart').getContext('2d');
        
        const categoryLabels = categoryData.map(item => item.CategoryName);
        const categoryValues = categoryData.map(item => item.BlogCount);
        const categoryColors = [
            '#4e73df', '#1cc88a', '#36b9cc', '#f6c23e', '#e74a3b',
            '#858796', '#5a5c69', '#2e59d9', '#17a673', '#2c9faf'
        ];

        new Chart(pieCtx, {
            type: 'doughnut',
            data: {
                labels: categoryLabels,
                datasets: [{
                    data: categoryValues,
                    backgroundColor: categoryColors,
                    borderWidth: 2,
                    borderColor: '#fff'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            padding: 15,
                            font: {
                                size: 12
                            }
                        }
                    },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = context.parsed || 0;
                                const item = categoryData[context.dataIndex];
                                return `${label}: ${value} blogs (${item.Percentage}%)`;
                            }
                        }
                    }
                }
            }
        });

        // 2. LINE CHART - Son 7 Günlük Aktivite
        const lineCtx = document.getElementById('activityLineChart').getContext('2d');
        
        const activityLabels = activityData.map(item => {
            const date = new Date(item.Date);
            return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
        });
        const blogCounts = activityData.map(item => item.BlogCount);
        const commentCounts = activityData.map(item => item.CommentCount);

        new Chart(lineCtx, {
            type: 'line',
            data: {
                labels: activityLabels,
                datasets: [
                    {
                        label: 'New Blogs',
                        data: blogCounts,
                        borderColor: '#4e73df',
                        backgroundColor: 'rgba(78, 115, 223, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.3
                    },
                    {
                        label: 'New Comments',
                        data: commentCounts,
                        borderColor: '#1cc88a',
                        backgroundColor: 'rgba(28, 200, 138, 0.1)',
                        borderWidth: 2,
                        fill: true,
                        tension: 0.3
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            padding: 15,
                            font: {
                                size: 12
                            }
                        }
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false
                    }
                }
            }
        });
    </script>
}
