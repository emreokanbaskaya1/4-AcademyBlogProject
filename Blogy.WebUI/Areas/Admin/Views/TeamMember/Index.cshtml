@using Blogy.Business.DTOs.TeamMemberDtos
@model List<ResultTeamMemberDto>
@{
    ViewData["Title"] = "Team Members Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Team Members</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Full Name</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image URL</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.FullName</td>
                <td>@item.Title</td>
                <td>@(item.Description.Length > 50 ? item.Description.Substring(0, 50) + "..." : item.Description)</td>
                <td>@item.ImageUrl</td>
                <td>
                    <a href="/Admin/TeamMember/DeleteTeamMember/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this team member?')">Delete</a>
                    <a href="/Admin/TeamMember/UpdateTeamMember/@item.Id" class="btn btn-info btn-sm">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/TeamMember/CreateTeamMember" class="btn btn-primary">Add New Team Member</a>
