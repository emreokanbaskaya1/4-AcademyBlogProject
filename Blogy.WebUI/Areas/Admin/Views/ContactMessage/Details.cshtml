@model ResultContactMessageDto
@{
    ViewData["Title"] = "Message Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Message Details</h6>
    </div>
    <div class="card-body">
        <div class="row mb-3">
            <div class="col-md-6">
                <strong>From:</strong> @Model.Name
            </div>
            <div class="col-md-6">
                <strong>Email:</strong> <a href="mailto:@Model.Email">@Model.Email</a>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-md-6">
                <strong>Date:</strong> @Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")
            </div>
            <div class="col-md-6">
                <strong>Status:</strong>
                @if (Model.IsRead)
                {
                    <span class="badge bg-success">Read</span>
                }
                else
                {
                    <span class="badge bg-warning">Unread</span>
                }
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12">
                <strong>Subject:</strong>
                <p class="mt-2">@Model.Subject</p>
            </div>
        </div>
        <div class="row mb-3">
            <div class="col-12">
                <strong>Message:</strong>
                <p class="mt-2 p-3 bg-light rounded">@Model.Message</p>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <a href="/Admin/ContactMessage/Index" class="btn btn-secondary">Back to Messages</a>
                <a href="/Admin/ContactMessage/DeleteMessage/@Model.Id" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this message?')">Delete</a>
            </div>
        </div>
    </div>
</div>
