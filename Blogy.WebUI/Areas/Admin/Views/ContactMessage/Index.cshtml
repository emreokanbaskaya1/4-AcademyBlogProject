@model List<ResultContactMessageDto>
@{
    ViewData["Title"] = "Contact Messages";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Contact Messages</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Email</th>
            <th>Subject</th>
            <th>Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            count++;
            <tr class="@(!item.IsRead ? "table-info" : "")">
                <th>@count</th>
                <td>@item.Name</td>
                <td>@item.Email</td>
                <td>@item.Subject</td>
                <td>@item.CreatedDate.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @if (item.IsRead)
                    {
                        <span class="badge bg-success">Read</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Unread</span>
                    }
                </td>
                <td>
                    <a href="/Admin/ContactMessage/Details/@item.Id" class="btn btn-primary btn-sm">View</a>
                    <a href="/Admin/ContactMessage/DeleteMessage/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this message?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
