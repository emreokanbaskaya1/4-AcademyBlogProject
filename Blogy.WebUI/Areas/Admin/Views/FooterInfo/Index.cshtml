@model List<ResultFooterInfoDto>
@{
    ViewData["Title"] = "Footer Information Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Footer Information</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>About Text</th>
            <th>Copyright Text</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@(item.AboutText.Length > 100 ? item.AboutText.Substring(0, 100) + "..." : item.AboutText)</td>
                <td>@item.CopyrightText</td>
                <td>
                    <a href="/Admin/FooterInfo/DeleteFooterInfo/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this footer info?')">Delete</a>
                    <a href="/Admin/FooterInfo/UpdateFooterInfo/@item.Id" class="btn btn-info btn-sm">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.Count == 0)
{
    <a href="/Admin/FooterInfo/CreateFooterInfo" class="btn btn-primary">Create Footer Information</a>
}
