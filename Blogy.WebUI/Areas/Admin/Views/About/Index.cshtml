@using Blogy.Business.DTOs.AboutDtos
@model List<ResultAboutDto>
@{
    ViewData["Title"] = "About Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>About Sections</h3>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Description</th>
            <th>Image URL</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 0;
        }
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Title</td>
                <td>@(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)</td>
                <td>@item.ImageUrl</td>
                <td>
                    <a href="/Admin/About/DeleteAbout/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this item?')">Delete</a>
                    <a href="/Admin/About/UpdateAbout/@item.Id" class="btn btn-info btn-sm">Update</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Admin/About/CreateAbout" class="btn btn-primary">Create New About Section</a>
