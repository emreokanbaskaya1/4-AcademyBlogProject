@model List<ResultUserDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Users</h3>

@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Name Surname</th>
        <th>Username</th>
        <th>Email</th>
        <th>Roles</th>
        <th>Actions</th>
    </tr>


    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.FullName</td>
            <td>@item.UserName</td>
            <td>@item.Email</td>
            <td>
                @if (item.Roles != null)
                {
                    foreach (var role in item.Roles)
                    {
                        <span class="badge badge-primary">@role</span>
                        <br />
                    }
                }
            </td>
            <td>
                <a href="/Admin/Users/AssignRole/@item.Id" class="btn btn-info">Assign a role</a>
            </td>
        </tr>
    }
</table>

