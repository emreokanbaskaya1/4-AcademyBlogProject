@model List<AssignRoleDto>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Assign Role Page</h3>

<h4>You can assign a role to @ViewBag.fullName</h4>

<form method="post">

    @for (int i = 0; i < Model.Count; i++)
    {

        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId"/>
            <input type="hidden" asp-for="@Model[i].RoleName"/>
            <input type="hidden" asp-for="@Model[i].UserId"/>
            <input type="checkbox" asp-for="@Model[i].RoleExist" class="form-check-input" />
            <label class="form-check-label">@Model[i].RoleName</label>
        </div>
    }

    <br />
    <button class="btn btn-outline-primary">Assign Role</button>
</form>