@model UpdateBlogDto
@{
    ViewData["Title"] = "Update Blog";
    Layout = "~/Views/Shared/Writer_Layout.cshtml";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Update Blog</h1>
    <a href="/Writer/Blog/Index" class="d-none d-sm-inline-block btn btn-sm btn-secondary shadow-sm">
        <i class="fas fa-arrow-left fa-sm text-white-50"></i> Back to My Blogs
    </a>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Edit Blog Information</h6>
            </div>
            <div class="card-body">
                <form method="post" asp-action="UpdateBlog" asp-controller="Blog" asp-area="Writer">
                    
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="form-group">
                        <label asp-for="Title" class="font-weight-bold">Blog Title</label>
                        <input type="text" asp-for="Title" class="form-control" placeholder="Enter blog title..." />
                        <span class="text-danger" asp-validation-for="Title"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description" class="font-weight-bold">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="6" placeholder="Write your blog content..."></textarea>
                        <span class="text-danger" asp-validation-for="Description"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CoverImage" class="font-weight-bold">Cover Image URL</label>
                                <input type="text" asp-for="CoverImage" class="form-control" placeholder="https://example.com/cover.jpg" />
                                <span class="text-danger" asp-validation-for="CoverImage"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CategoryId" class="font-weight-bold">Category</label>
                                <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
                                    <option value="">-- Select Category --</option>
                                </select>
                                <span class="text-danger" asp-validation-for="CategoryId"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BlogImage1" class="font-weight-bold">Blog Image 1 URL</label>
                                <input type="text" asp-for="BlogImage1" class="form-control" placeholder="https://example.com/image1.jpg" />
                                <span class="text-danger" asp-validation-for="BlogImage1"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BlogImage2" class="font-weight-bold">Blog Image 2 URL</label>
                                <input type="text" asp-for="BlogImage2" class="form-control" placeholder="https://example.com/image2.jpg" />
                                <span class="text-danger" asp-validation-for="BlogImage2"></span>
                            </div>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="form-group text-right">
                        <a href="/Writer/Blog/Index" class="btn btn-secondary">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Update Blog
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
