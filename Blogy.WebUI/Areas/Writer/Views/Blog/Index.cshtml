@model List<ResultBlogDto>
@{
    ViewData["Title"] = "My Blogs";
    Layout = "~/Views/Shared/Writer_Layout.cshtml";
}

<h1>Index</h1>

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">My Blogs</h1>
    <a href="/Writer/Blog/CreateBlog" class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Create New Blog
    </a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="card shadow mb-4">
        <div class="card-body text-center py-5">
            <i class="fas fa-newspaper fa-3x text-gray-300 mb-3"></i>
            <p class="text-gray-500">You haven't created any blogs yet.</p>
            <a href="/Writer/Blog/CreateBlog" class="btn btn-success">Create Your First Blog</a>
        </div>
    </div>
}
else
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-success">Blog List (@Model.Count blogs)</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Cover</th>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Created Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 0;
                        }
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>
                                    <img src="@item.CoverImage" alt="@item.Title" style="width: 60px; height: 60px; object-fit: cover;" class="rounded">
                                </td>
                                <td>
                                    <strong>@item.Title</strong>
                                    <br />
                                    <small class="text-muted">@(item.Description?.Length > 80 ? item.Description.Substring(0, 80) + "..." : item.Description)</small>
                                </td>
                                <td>
                                    <span class="badge badge-primary">@item.Category?.CategoryName</span>
                                </td>
                                <td>@item.CreatedDate.ToShortDateString()</td>
                                <td>
                                    <a href="/Writer/Blog/UpdateBlog/@item.Id" class="btn btn-info btn-sm" title="Edit">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="/Writer/Blog/DeleteBlog/@item.Id" 
                                       onclick="return confirm('Are you sure you want to delete this blog?')" 
                                       class="btn btn-danger btn-sm" 
                                       title="Delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

